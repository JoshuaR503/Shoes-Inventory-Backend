    "@nestjs/typeorm": "^7.1.5",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/mongodb": "^3.6.3",
    "apollo-server-express": "^2.19.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
